<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/backgroundPanelStyle"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_background">

            <Switch
                android:id="@+id/mode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:textStyle="italic"
                android:layout_gravity="center"
                android:onClick="onModeSwitchClick"/>

            <TextView
                android:id="@+id/filmList"
                style="@style/filmNameStyle"
                android:layout_marginHorizontal="0dp"
                android:layout_weight="2"
                android:gravity="start|center"
                android:paddingTop="8dp"
                android:paddingStart="16dp"
                android:paddingBottom="8dp"
                android:text="@string/mainActivityTitle"
                android:textSize="15sp" />

            <Button
                android:id="@+id/inviteFriend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:background="@null"
                android:drawableEnd="@drawable/fenec_logo"
                android:drawablePadding="10dp"
                android:gravity="end|center"
                android:onClick="onInviteBtnClick"
                android:text="@string/inviteBtn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/harryPotterImg"
                    style="@style/posterStyle"
                    app:srcCompat="@drawable/harry_potter_1" />

                <ImageView
                    android:id="@+id/sweeneyToddImg"
                    style="@style/posterStyle"
                    app:srcCompat="@drawable/sweeney_todd" />

                <ImageView
                    android:id="@+id/dogsPurposeImg"
                    style="@style/posterStyle"
                    app:srcCompat="@drawable/dogs_purpose" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/harryPotterText"
                    style="@style/filmNameStyle"
                    android:layout_weight="1"
                    android:text="@string/harryPotterFilm" />

                <TextView
                    android:id="@+id/sweeneyToddText"
                    style="@style/filmNameStyle"
                    android:layout_weight="1"
                    android:text="@string/sweeneyToddFilm" />

                <TextView
                    android:id="@+id/dogsPurposeText"
                    style="@style/filmNameStyle"
                    android:layout_weight="1"
                    android:text="@string/dogsPurposeFilm" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <Button
                    android:id="@+id/harryPotter1DetailsBtn"
                    style="@style/detailsBtnVerticalViewStyle"
                    android:onClick="onDetailsBtnClick" />

                <Button
                    android:id="@+id/sweeneyToddDetailsBtn"
                    style="@style/detailsBtnVerticalViewStyle"
                    android:onClick="onDetailsBtnClick" />

                <Button
                    android:id="@+id/dogsPurposeDetailsBtn"
                    style="@style/detailsBtnVerticalViewStyle"
                    android:onClick="onDetailsBtnClick" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    style="@style/posterStyle"
                    app:srcCompat="@drawable/age_of_adaline" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ageOfAdalineText"
                    style="@style/filmNameStyle"
                    android:layout_weight="1"
                    android:text="@string/ageOfAdalineFilm" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <Button
                    android:id="@+id/ageOfAdalineDetailsBtn"
                    style="@style/detailsBtnVerticalViewStyle"
                    android:layout_weight="1"
                    android:onClick="onDetailsBtnClick" />

                <Button
                    style="@style/detailsBtnVerticalViewStyle"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <Button
                    style="@style/detailsBtnVerticalViewStyle"
                    android:layout_weight="1"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>