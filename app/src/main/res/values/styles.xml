<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/heldustryft</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="backgroundPanelStyle">
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="btnStyle">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="detailsBtnStyle" parent="btnStyle">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:text">@string/detailsBtn</item>
        <item name="android:layout_width">122dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="filmNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">10sp</item>
        <!--Tried to do scrolling, but it didn't work. Don't know why =( -->
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="descriptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>

    <style name="posterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="likeCheckboxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:text">@string/like</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="commentEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:background">@color/colorBacking</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">5</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
